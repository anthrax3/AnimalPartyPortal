@model AnimalPartyGallery.Models.Comment

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Edit Comment</h2>
    <div class="form-horizontal index-border-radius" style="float:left;width: auto">
        <div style="margin:0px 10px 0px 10px">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.Author)
            @Html.HiddenFor(model => model.RefferedPost)

            <label>Title</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <label>Content</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <label>PhotoURL</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                </div>
            </div>


            <label>Phone</label>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <label>Hitchhiker?</label>
          
                        @Html.EditorFor(model => model.Hitchhiker)
                        @Html.ValidationMessageFor(model => model.Hitchhiker, "", new { @class = "text-danger" })
                   
           

            <div class="form-group" style="margin-left:10px">

                <input type="submit" value="Save" class="btn btn-default" />
                <a href="@Url.Action("Index", "Users",null)" class="btn btn-default">Back</a>
            </div>
        </div>
    </div>
}
<img class="rightPhoto shadowBox" src="~/Images/editor.jpg" />
