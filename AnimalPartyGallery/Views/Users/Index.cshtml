
@model AnimalPartyGallery.Models.PostCommentModel


@{
    ViewBag.Title = "Index";
}


@if (ViewBag.displayMenu == "Yes")
{
    <h2>Welcome Admin</h2>
}
else
{
    
    <h2>Welcome @User.Identity.Name</h2>

}   


<div class="index-border-radius">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Date</th>
                <th>Event Name</th>
                <th>Producer</th>
                <th>Phone</th>
                <th>Album</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model.postList)
                {
                    <tr class="danger">
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Producer)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.ActionLink("Link", "Details", "Post", new { id = item.ID }, null)</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Post", new { id = item.ID }, null)|@Html.ActionLink("Delete", "Delete", "Post", new { id = item.ID }, null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




<hr />

@foreach (var item in Model.commentList)
{
    <div class="responsive">
        <div class="gallery">
            <a class="btn btn-primary btn-xs">@Html.ActionLink("Edit", "Edit", "Comment", new { id = item.ID }, null)</a>
            <a class="btn btn-primary btn-xs">@Html.ActionLink("Delete", "Delete", "Comment", new { id = item.ID }, null)</a>
             <div class="desc" style="font-weight: 900;">@item.Author</div>
            <img src="@Html.DisplayFor(Model => item.Photo)" alt="Tal SAHAR" width="300" height="200">
            <div class="desc">
                <p style="color:#808080;font-weight:bold;">@item.Title<br />
                <p class="greyText"> @item.Content</p>
            </div>

        </div>
    </div>



}




