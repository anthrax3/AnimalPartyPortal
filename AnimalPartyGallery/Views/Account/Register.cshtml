@model AnimalPartyGallery.Models.RegisterViewModel
@{
    ViewBag.Title = "Create a new account";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
   
    @Html.ValidationSummary("", new { @class = "text-danger" })
   
        <div class="index-border-radius" style="width:auto;float: left;">
            <label>Email</label>
            <div class="form-group">
                
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <label>UserName</label>
            <div class="form-group">
                
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>

            <label>Password</label>
            <div class="form-group">
                
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            
            <label>Confirm Password</label>
            <div class="form-group">
                
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            @Html.HiddenFor(m => m.UserRoles)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
         
        </div>

        <img class="rightPhoto shadowBox" src="~/Images/register.jpg" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

